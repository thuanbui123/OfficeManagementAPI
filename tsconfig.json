{
  "compilerOptions": {
    /* ---- Layout ---- */
    "rootDir": "./src",
    "outDir": "./dist",

    /* ---- Runtime (Node + CommonJS) ---- */
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* ---- JS/TS cùng tồn tại khi migrate ---- */
    "allowJs": true,
    "checkJs": false,

    /* ---- Chất lượng & tiện ích ---- */
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,

    /* ---- Types & alias đúng với cấu trúc của bạn ---- */
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@libs/*": ["libs/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@repositories/*": ["repositories/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@app-types/*": ["types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
